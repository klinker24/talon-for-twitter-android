        <service android:name="com.klinker.android.twitter.services.SecondMentionsRefreshService">
        </service>

        <service android:name="com.klinker.android.twitter.services.DirectMessageRefreshService">
        </service>

        <service android:name="com.klinker.android.twitter.services.TrimDataService">
        </service>


<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/browser_options" >

        <CheckBoxPreference
            android:key="inapp_browser"
            android:title="@string/use_inapp_browser"
            android:defaultValue="true"
            />

        <CheckBoxPreference
            android:key="open_to_web"
            android:title="@string/open_to_web"
            android:summary="@string/open_to_web_summary"
            android:defaultValue="true"
            android:dependency="inapp_browser"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="advanced_other"
        android:title="@string/other_options" >

        <CheckBoxPreference
            android:key="tweetmarker"
            android:title="@string/use_tweetmarker"
            android:summary="@string/tweetmarker_summary"
            android:defaultValue="false"
            />

        <CheckBoxPreference
            android:key="twitlonger"
            android:title="@string/use_twitlonger"
            android:defaultValue="true"
            />

        <CheckBoxPreference
            android:key="twitpic"
            android:title="@string/use_twitpic"
            android:summary="@string/twitpic_summary"
            android:defaultValue="false"
            />

        <CheckBoxPreference
            android:key="use_emojis"
            android:title="@string/enable_emojis"
            android:defaultValue="false"
            />

        <CheckBoxPreference
            android:key="advance_windowed"
            android:title="@string/advance_windowed"
            android:summary="@string/advance_windowed_summary"
            android:defaultValue="true"
            />

        <CheckBoxPreference
            android:key="prefer_rt"
            android:title="@string/rt_style_quotes"
            android:summary="@string/rt_style_quotes_summary"
            android:defaultValue="false"
            />

        <CheckBoxPreference
            android:key="auto_insert_hashtags"
            android:title="@string/auto_insert_hashtags"
            android:summary="@string/to_replies"
            android:defaultValue="false"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="memory_management"
        android:title="@string/memory_management">

        <ListPreference
            android:key="timeline_size"
            android:title="@string/timeline_size"
            android:summary="@string/timeline_size_summary"
            android:defaultValue="1000"
            android:entries="@array/timeline_size"
            android:entryValues="@array/timeline_size"
            />

        <ListPreference
            android:key="mentions_size"
            android:title="@string/mentions_size"
            android:summary="@string/mentions_size_summary"
            android:defaultValue="100"
            android:entries="@array/mentions_size"
            android:entryValues="@array/mentions_size"
            />

        <ListPreference
            android:key="dm_size"
            android:title="@string/dm_size"
            android:summary="@string/dm_size_summary"
            android:defaultValue="100"
            android:entries="@array/mentions_size"
            android:entryValues="@array/mentions_size"
            />

        <CheckBoxPreference
            android:key="auto_trim"
            android:title="@string/auto_trim"
            android:summary="@string/not_cache"
            android:defaultValue="true"
            />

        <Preference
            android:key="trim_now"
            android:title="@string/clean_now"
            android:summary="@string/clean_now_summary"
            />

        <Preference
            android:key="delete_cache"
            android:title="@string/delete_cache"
            />

        <Preference
            android:key="clear_searches"
            android:title="@string/clear_searches"
            />

        </PreferenceCategory>

    <PreferenceCategory
        android:key="backup_category"
        android:title="@string/backup_category">

        <Preference
            android:key="backup"
            android:title="@string/backup_settings"
            />

        <Preference
            android:key="restore"
            android:title="@string/restore_settings"
            android:summary="@string/restore_settings_summary"
            />

    </PreferenceCategory>

</PreferenceScreen>
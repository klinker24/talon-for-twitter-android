<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/browser_options" >

        <CheckBoxPreference
            android:key="inapp_browser"
            android:title="@string/use_inapp_browser"
            android:defaultValue="true"
            />

        <CheckBoxPreference
            android:key="inapp_browser_tweet"
            android:title="@string/use_browser_on_tweet"
            android:defaultValue="true"
            />

        <CheckBoxPreference
            android:key="mobilized_browser"
            android:title="@string/plain_text_browser"
            android:summary="@string/plain_text_summary"
            android:defaultValue="false"
            />

        <CheckBoxPreference
            android:key="mobilize_on_data_only"
            android:title="@string/plain_text_on_data"
            android:summary="@string/plain_text_on_data_summary"
            android:defaultValue="true"
            android:dependency="mobilized_browser"
            />

        <!--<CheckBoxPreference
            android:key="open_to_web"
            android:title="@string/open_to_web"
            android:summary="@string/open_to_web_summary"
            android:defaultValue="true"
            android:dependency="inapp_browser_tweet"
            />-->

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/local_trend_options" >

        <CheckBoxPreference
            android:key="manually_config_location"
            android:title="@string/manually_config_location"
            android:defaultValue="false"
            />

        <ListPreference
            android:key="country"
            android:title="@string/country_region"
            android:defaultValue="United States"
            android:entries="@array/countries"
            android:entryValues="@array/countries"
            android:dependency="manually_config_location"
            />

        <Preference
            android:key="city"
            android:title="@string/city"
            android:dependency="manually_config_location" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="third_party"
        android:title="@string/third_party_services" >

        <CheckBoxPreference
            android:key="tweetmarker"
            android:title="@string/use_tweetmarker"
            android:defaultValue="false"
            />

        <CheckBoxPreference
            android:key="twitlonger"
            android:title="@string/use_shortening_service"
            android:summary="@string/use_shortening_service_summary"
            android:defaultValue="true"
            />

        <CheckBoxPreference
            android:key="twitpic"
            android:title="@string/use_twitpic"
            android:summary="@string/twitpic_summary"
            android:defaultValue="false"
            />

        </PreferenceCategory>

    <PreferenceCategory
        android:key="display_other"
        android:title="@string/display_options" >

        <CheckBoxPreference
            android:key="use_emojis"
            android:title="@string/enable_emojis"
            android:defaultValue="false"
            />

        <CheckBoxPreference
            android:key="advance_windowed"
            android:title="@string/advance_windowed"
            android:summary="@string/advance_windowed_summary"
            android:defaultValue="true"
            />

        <CheckBoxPreference
            android:key="open_keyboard"
            android:title="@string/open_keyboard"
            android:summary="@string/open_keyboard_summary"
            android:defaultValue="false"
            />

        </PreferenceCategory>

    <PreferenceCategory
        android:key="advanced_other"
        android:title="@string/other_options" >

        <CheckBoxPreference
            android:key="prefer_rt"
            android:title="@string/rt_style_quotes"
            android:summary="@string/rt_style_quotes_summary"
            android:defaultValue="false"
            />

        <CheckBoxPreference
            android:key="auto_insert_hashtags"
            android:title="@string/auto_insert_hashtags"
            android:summary="@string/to_replies"
            android:defaultValue="false"
            />

        <CheckBoxPreference
            android:key="jumping_workaround"
            android:title="@string/jumping_workaround"
            android:summary="@string/jumping_workaround_summary"
            android:defaultValue="false"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="memory_management"
        android:title="@string/memory_management">

        <ListPreference
            android:key="timeline_size"
            android:title="@string/timeline_size"
            android:summary="@string/timeline_size_summary"
            android:defaultValue="500"
            android:entries="@array/timeline_size"
            android:entryValues="@array/timeline_size"
            />

        <ListPreference
            android:key="mentions_size"
            android:title="@string/mentions_size"
            android:summary="@string/mentions_size_summary"
            android:defaultValue="100"
            android:entries="@array/mentions_size"
            android:entryValues="@array/mentions_size"
            />

        <ListPreference
            android:key="dm_size"
            android:title="@string/dm_size"
            android:summary="@string/dm_size_summary"
            android:defaultValue="100"
            android:entries="@array/mentions_size"
            android:entryValues="@array/mentions_size"
            />

        <Preference
            android:key="trim_now"
            android:title="@string/clean_now"
            android:summary="@string/clean_now_summary"
            />

        <Preference
            android:key="delete_cache"
            android:title="@string/delete_cache"
            />

        <Preference
            android:key="clear_searches"
            android:title="@string/clear_searches"
            />

        </PreferenceCategory>

    <PreferenceCategory
        android:key="backup_category"
        android:title="@string/backup_category">

        <Preference
            android:key="backup"
            android:title="@string/backup_settings"
            />

        <Preference
            android:key="restore"
            android:title="@string/restore_settings"
            android:summary="@string/restore_settings_summary"
            />

    </PreferenceCategory>

</PreferenceScreen>
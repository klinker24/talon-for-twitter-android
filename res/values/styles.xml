<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/activity_scale_up</item>
        <item name="android:windowShowAnimation">@anim/activity_scale_up</item>
    </style>

    <style name="Theme.PhotoViewerLight" parent="@style/Theme.Tutorial">
        <item name="android:actionOverflowButtonStyle">@style/CircleOverflow.Dark</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="Theme.PhotoViewerDark" parent="@style/Theme.Tutorial">
        <item name="android:actionOverflowButtonStyle">@style/CircleOverflow.Light</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="Theme.PhotoViewerLight.Popup" parent="@style/Theme.Tutorial">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">stateUnchanged</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowFrame">@drawable/rect_border_light</item>
        <!-- <item name="android:windowAnimationStyle">@style/PopupAnimation</item> -->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.PhotoViewerDark.Popup" parent="@style/Theme.Tutorial">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">stateUnchanged</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowFrame">@drawable/rect_border_light</item>
        <!-- <item name="android:windowAnimationStyle">@style/PopupAnimation</item> -->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.Tutorial" parent="@style/Theme.TalonDark">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:backgroundDimEnabled">false</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
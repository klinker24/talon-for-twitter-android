<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/background"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:elevation="4dp"
              android:background="?windowBackground">

    <!-- Tweet's Content -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!-- Tweet's Content -->
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?windowBackground"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="20dp">

                <TextView
                        android:id="@+id/tweet"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:fontFamily="sans-serif-strong"
                        android:textSize="18sp"
                        android:textIsSelectable="true"
                        android:textColor="?textColor" />

                <TextView
                        android:id="@+id/time"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:background="?android:selectableItemBackground"
                        android:textColor="?textColor"
                        android:alpha=".6"/>

                <TextView
                        android:id="@+id/retweeter"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="?textColor"
                        android:visibility="gone"
                        android:alpha=".6"/>

            </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingLeft="15dp"
                      android:paddingRight="15dp"
                      android:paddingBottom="16dp">


            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/favorite"
                          android:padding="12dp"
                          android:background="?android:attr/selectableItemBackground" >

                <TextView
                        android:id="@+id/favorite_text"
                        android:text="@string/favorite"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="?textColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textSize="13sp"
                        android:gravity="right"
                        android:textColor="?textColor"
                        android:fontFamily="sans-serif-light"
                        android:alpha=".6"
                        android:id="@+id/fav_count" />

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:gravity="center_vertical"
                          android:id="@+id/view_favoriters"
                          android:background="?android:selectableItemBackgroundBorderless" >

                <View android:layout_width="8dp" android:layout_height="match_parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/favoriters"
                        android:minHeight="36dp" android:minWidth="36dp"
                        android:maxWidth="36dp" android:maxHeight="36dp"/>

                <View android:layout_width="8dp" android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/retweet"
                          android:padding="12dp"
                          android:background="?android:attr/selectableItemBackground" >

                <TextView
                        android:id="@+id/retweet_text"
                        android:text="@string/retweet_lower"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="?textColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textSize="13sp"
                        android:gravity="right"
                        android:textColor="?textColor"
                        android:fontFamily="sans-serif-light"
                        android:alpha=".6"
                        android:id="@+id/retweet_count" />

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:gravity="center_vertical"
                          android:id="@+id/view_retweeters"
                          android:background="?android:selectableItemBackgroundBorderless">

                <View android:layout_width="8dp" android:layout_height="match_parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:id="@+id/retweeters"
                        android:minHeight="36dp" android:minWidth="36dp"
                        android:maxWidth="36dp" android:maxHeight="36dp"/>

                <View android:layout_width="8dp" android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

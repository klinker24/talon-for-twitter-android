<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="inapp_browser"
        android:title="@string/use_inapp_browser"
        android:defaultValue="true"
        />

    <CheckBoxPreference
        android:key="mobilized_browser"
        android:title="@string/plain_text_browser"
        android:summary="@string/plain_text_summary"
        android:defaultValue="false"
        />

    <CheckBoxPreference
        android:key="mobilize_on_data_only"
        android:title="@string/plain_text_on_data"
        android:summary="@string/plain_text_on_data_summary"
        android:defaultValue="true"
        android:dependency="mobilized_browser"
        />

</PreferenceScreen>
<com.klinker.android.twitter_l.manipulations.widgets.NotificationDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
                android:id="@+id/kitkat_status_bar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="gone"/>

        <android.support.v7.widget.Toolbar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/toolbar"
            android:elevation="5dp"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="?windowBackground"
            android:orientation="horizontal">

            <!-- The navigation drawer -->
            <include layout="@layout/main_drawer"
                android:id="@+id/left_drawer"
                android:layout_width="@dimen/drawer_size_land"
                android:layout_height="match_parent"
                android:layout_gravity="start" >

            </include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <View android:id="@+id/activity_status_bar"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@android:color/black"
                    android:visibility="gone"/>

                <com.astuetz.PagerSlidingTabStrip
                        android:id="@+id/pager_tab_strip"
                        android:layout_width="match_parent"
                        app:pstsDividerColor="@android:color/transparent"
                        app:pstsUnderlineColor="@android:color/transparent"
                        app:pstsTabBackground="?android:selectableItemBackground"
                        app:pstsIndicatorHeight="2dp"
                        app:pstsTabPaddingLeftRight="12dp"
                        android:layout_height="48dp" />

                <android.support.v4.view.ViewPager
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".MainActivity">

                </android.support.v4.view.ViewPager>
                </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/notification_drawer"
        android:id="@+id/right_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"/>
</com.klinker.android.twitter_l.manipulations.widgets.NotificationDrawerLayout>

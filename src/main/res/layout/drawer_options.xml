<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:clickable="true">

    <View android:layout_width="match_parent" android:layout_height="6dp" />

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="?drawerDividerColor"/>

    <View android:layout_width="match_parent" android:layout_height="6dp" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="onSettingsClicked"
            android:gravity="center_vertical"
            android:paddingLeft="6dp">

        <ImageView
                   android:src="?advancedSettings"
                   android:id="@+id/settings_image"
                   android:layout_height="28dp"
                   android:layout_width="28dp"
                   android:minHeight="28dp" android:minWidth="28dp"
                   android:scaleType="fitXY" android:adjustViewBounds="true"
                   android:maxHeight="28dp" android:maxWidth="28dp"
                   android:layout_margin="10dp"/>

        <TextView
                android:text="@string/menu_settings"
                android:id="@+id/settings_button"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="?textColor"
                android:fontFamily="sans-serif"
                android:layout_marginRight="16dp"
                android:paddingStart="72dp"/>


    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="onHelpClicked"
            android:paddingLeft="6dp">

        <ImageView
                android:src="?getHelp"
                android:id="@+id/help_image"
                android:layout_height="28dp"
                android:layout_width="28dp"
                android:minHeight="28dp" android:minWidth="28dp"
                android:scaleType="fitXY" android:adjustViewBounds="true"
                android:maxHeight="28dp" android:maxWidth="28dp"
                android:layout_margin="10dp"/>

        <TextView
                android:text="@string/help"
                android:id="@+id/help_button"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="?textColor"
                android:fontFamily="sans-serif"
                android:layout_marginRight="16dp"
                android:paddingStart="72dp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="onFeedbackClicked"
            android:paddingLeft="6dp">

        <ImageView
                android:src="?feedback"
                android:id="@+id/feedback_image"
                android:layout_height="28dp"
                android:layout_width="28dp"
                android:minHeight="28dp" android:minWidth="28dp"
                android:scaleType="fitXY" android:adjustViewBounds="true"
                android:maxHeight="28dp" android:maxWidth="28dp"
                android:layout_margin="10dp"/>

        <TextView
                android:text="@string/send_feedback"
                android:id="@+id/feedback_button"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="?textColor"
                android:fontFamily="sans-serif"
                android:layout_marginRight="16dp"
                android:paddingStart="72dp"/>
    </RelativeLayout>

</LinearLayout>
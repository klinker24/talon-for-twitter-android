<?xml version="1.0" encoding="utf-8"?>

<com.klinker.android.twitter_l.manipulations.widgets.NotificationDrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Toolbar
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/darker_primary"
                android:id="@+id/toolbar"/>

        <com.astuetz.PagerSlidingTabStrip
                android:id="@+id/pager_tab_strip"
                android:layout_width="match_parent"
                app:pstsDividerColor="@android:color/transparent"
                app:pstsUnderlineColor="@android:color/transparent"
                app:pstsTabBackground="?android:selectableItemBackground"
                app:pstsIndicatorHeight="2dp"
                app:pstsTabPaddingLeftRight="12dp"
                android:layout_height="48dp" />

        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity" >

            </android.support.v4.view.ViewPager>

        </LinearLayout>


    <!-- The navigation drawer -->
    <include layout="@layout/main_drawer"
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start" >

    </include>

    <include layout="@layout/notification_drawer"
             android:id="@+id/right_drawer"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="end"/>

</com.klinker.android.twitter_l.manipulations.widgets.NotificationDrawerLayout>
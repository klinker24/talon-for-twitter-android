<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?drawerBackground">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?drawerDividerColor" />

    <LinearLayout
        android:id="@+id/footer"
        android:contentDescription="Show All"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/read_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:src="?read_button"
            android:padding="8dp"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:id="@+id/old_interactions_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/old_interactions"
            android:gravity="start"
            android:textColor="?textColor"
            android:textSize="19dp"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:layout_gravity="right|center_vertical"
                android:padding="8dp"/>

        <ImageButton
                android:id="@+id/dismiss_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:minHeight="36dp"
                android:minWidth="36dp"
                android:maxHeight="36dp"
                android:maxWidth="36dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginRight="8dp"
                android:src="?cancelButton"
                android:layout_gravity="center_vertical"
                android:background="?android:selectableItemBackgroundBorderless"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?drawerDividerColor" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
               android:id="@+id/background_image"
               android:layout_height="150dp"
               android:layout_width="match_parent"
               android:scaleType="centerCrop"
               android:background="?android:selectableItemBackground"
               android:contentDescription="Background Picture"
            />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp"
            android:gravity="bottom|center_horizontal"
            android:background="@drawable/gradient">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/profile_pic_contact"
            android:src="@drawable/circle_border_dark"
            android:layout_marginTop="20dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="10dp"
            android:minHeight="56dp" android:minWidth="56dp"
            android:scaleType="centerCrop" android:adjustViewBounds="true"
            android:maxWidth="56dp" android:maxHeight="56dp"
            android:contentDescription="Profile Picture" />

        <View android:id="@+id/divider"
              android:background="@color/white_divider"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginLeft="6dp"
              android:layout_marginRight="6dp" />

        <ImageButton
                android:id="@+id/options"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:src="@drawable/ic_action_expand_dark"
                android:scaleType="fitCenter" android:adjustViewBounds="true"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Options"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:alpha="30"
                />

    </LinearLayout>
</RelativeLayout>
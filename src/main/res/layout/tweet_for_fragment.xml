<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  >

    <!-- Tweet's Content -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- Tweet's Content -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.klinker.android.twitter_l.manipulations.widgets.HoloTextView
                android:id="@+id/tweet"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-strong"
                android:textSize="18sp"
                android:paddingTop="12dp"
                android:layout_marginBottom="6dp"
                android:textIsSelectable="true"
                android:textColor="?textColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/extra_content"
                android:background="?windowBackground"
                android:visibility="invisible">

                <LinearLayout
                    android:id="@+id/youtube_view"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_margin="5dp"
                    />

                <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/gif_holder"
                    android:gravity="center">

                    <VideoView
                        android:id="@+id/gif"
                        android:background="?windowBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>

                    <LinearLayout android:id="@+id/spinner"
                        android:orientation="vertical"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        android:gravity="center" >

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.AppCompat.ProgressBar"
                            android:indeterminateOnly="true" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_rect"
                    android:transitionName="image"
                    android:id="@+id/image"/>

                <ImageView
                    android:id="@+id/play_button"
                    android:visibility="gone"
                    android:layout_gravity="bottom|start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="@android:color/transparent"/>

            </FrameLayout>


            <com.klinker.android.twitter_l.manipulations.widgets.HoloTextView
                android:id="@+id/retweeter"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:textColor="?textColor"
                android:visibility="gone"
                android:alpha=".6"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

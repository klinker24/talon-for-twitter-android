<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >

    <com.klinker.android.twitter_l.manipulations.widgets.NetworkedCacheableImageView
               android:id="@+id/background_image"
               android:layout_height="match_parent"
               android:layout_width="match_parent"
               android:scaleType="centerCrop"
               android:background="?android:attr/selectableItemBackground"
               android:contentDescription="Background Picture"
            />

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/profile_pic_contact"
            android:minHeight="56dp" android:minWidth="56dp"
            android:maxWidth="56dp" android:maxHeight="56dp"
            android:contentDescription="Profile Picture"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="36dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

        <LinearLayout
                android:layout_toRightOf="@+id/pro_pic_layout"
                android:layout_alignTop="@+id/pro_pic_layout"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

            <TextView
                    android:id="@+id/screen_name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:paddingBottom="3dp"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp">
            <ImageButton
                    android:id="@+id/options"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="14dp"
                    android:src="@drawable/ic_action_expand_dark"
                    android:maxWidth="48dp" android:maxHeight="48dp"
                    android:scaleType="fitXY" android:adjustViewBounds="true"
                    android:minHeight="48dp" android:minWidth="48dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="Options"
                    />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
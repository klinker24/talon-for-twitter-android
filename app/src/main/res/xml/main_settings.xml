<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.klinker.android.twitter_l.views.preference.IconPreference
        android:key="faq"
        android:title="@string/faq"
        android:icon="?getHelp" />

    <com.klinker.android.twitter_l.views.preference.IconPreference
        android:key="whats_new"
        android:title="@string/whats_new"
        android:icon="?rateIt" />

    <com.klinker.android.twitter_l.views.preference.MaterialPreferenceCategory
        android:title="@string/look_and_feel" >

        <com.klinker.android.twitter_l.views.preference.IconPreference
            android:key="app_style"
            android:title="@string/app_style"
            android:icon="?themeSettings" />

        <com.klinker.android.twitter_l.views.preference.IconPreference
            android:key="widget_customization"
            android:title="@string/widget_settings"
            android:icon="?widget_customization" />

        <com.klinker.android.twitter_l.views.preference.IconPreference
            android:key="swipable_pages_and_app_drawer"
            android:title="@string/main_pages_and_drawer"
            android:icon="?settings_pages" />

    </com.klinker.android.twitter_l.views.preference.MaterialPreferenceCategory>

    <com.klinker.android.twitter_l.views.preference.MaterialPreferenceCategory
        android:title="@string/background">

        <com.klinker.android.twitter_l.views.preference.IconPreference
            android:key="background_refreshes"
            android:title="@string/sync_settings"
            android:icon="?background_sync" />

        <com.klinker.android.twitter_l.views.preference.IconPreference
            android:key="notifications"
            android:title="@string/notification_settings"
            android:icon="?notification_settings" />

        <com.klinker.android.twitter_l.views.preference.IconPreference
            android:key="data_saving_options"
            android:title="@string/data_saving_settings"
            android:icon="?data_saver" />

    </com.klinker.android.twitter_l.views.preference.MaterialPreferenceCategory>

    <com.klinker.android.twitter_l.views.preference.MaterialPreferenceCategory
        android:title="@string/advanced">

        <com.klinker.android.twitter_l.views.preference.IconPreference
            android:key="location"
            android:title="@string/location"
            android:icon="?location_button" />

        <com.klinker.android.twitter_l.views.preference.IconPreference
            android:key="mute_management"
            android:title="@string/manage_mutes"
            android:icon="?tweet_interactions" />

        <com.klinker.android.twitter_l.views.preference.IconPreference
            android:key="app_memory"
            android:title="@string/memory_manage"
            android:icon="?memManagement" />

        <com.klinker.android.twitter_l.views.preference.IconPreference
            android:key="other_options"
            android:title="@string/other_options"
            android:icon="?advancedSettings" />

    </com.klinker.android.twitter_l.views.preference.MaterialPreferenceCategory>

    <com.klinker.android.twitter_l.views.preference.MaterialPreferenceCategory
        android:title="@string/supporter_2016">

        <com.klinker.android.twitter_l.views.preference.BecomeSupporterPreference
            android:key="become_supporter"
            android:icon="?supporter" />

    </com.klinker.android.twitter_l.views.preference.MaterialPreferenceCategory>

</PreferenceScreen>
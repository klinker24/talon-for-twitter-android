<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="16dp">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">


        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/favorite"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground" >

            <TextView
                android:id="@+id/favorite_text"
                android:text="@string/favorite"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/dark_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="13sp"
                android:gravity="right"
                android:textColor="@color/dark_text"
                android:fontFamily="sans-serif-light"
                android:alpha=".6"
                android:id="@+id/fav_count" />

        </LinearLayout>

        <View android:layout_width="8dp" android:layout_height="match_parent" />

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/retweet"
            android:background="?android:attr/selectableItemBackground">

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp" >

                <TextView
                    android:id="@+id/retweet_text"
                    android:text="@string/retweet_lower"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/dark_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textSize="13sp"
                    android:gravity="right"
                    android:textColor="@color/dark_text"
                    android:fontFamily="sans-serif-light"
                    android:alpha=".6"
                    android:id="@+id/retweet_count" />

            </LinearLayout>

            <View android:layout_width="8dp" android:layout_height="match_parent" />

            <LinearLayout android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/view_retweeters" >

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/retweeter_1"
                    android:minHeight="36dp" android:minWidth="36dp"
                    android:scaleType="centerCrop" android:adjustViewBounds="true"
                    android:maxWidth="36dp" android:maxHeight="36dp"
                    android:background="@drawable/pro_pic_clip"/>

                <View android:layout_width="8dp" android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/retweeter_2"
                    android:minHeight="36dp" android:minWidth="36dp"
                    android:scaleType="centerCrop" android:adjustViewBounds="true"
                    android:maxWidth="36dp" android:maxHeight="36dp"
                    android:background="@drawable/pro_pic_clip"/>

                <View android:layout_width="8dp" android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/retweeter_3"
                    android:minHeight="36dp" android:minWidth="36dp"
                    android:scaleType="centerCrop" android:adjustViewBounds="true"
                    android:maxWidth="36dp" android:maxHeight="36dp"
                    android:background="@drawable/pro_pic_clip"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!--<LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/web_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_links_dark"
                android:contentDescription="Open Web Page"
                android:minHeight="48dp" android:minWidth="48dp"
                android:scaleType="center" android:adjustViewBounds="true"
                android:maxWidth="48dp" android:maxHeight="48dp"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>-->


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/conversation_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_action_share_dark"
                android:contentDescription="Open Web Page"
                android:minHeight="48dp" android:minWidth="48dp"
                android:scaleType="center" android:adjustViewBounds="true"
                android:maxWidth="48dp" android:maxHeight="48dp"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/compose_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_send_dark"
                android:contentDescription="Open Web Page"
                android:minHeight="48dp" android:minWidth="48dp"
                android:scaleType="center" android:adjustViewBounds="true"
                android:maxWidth="48dp" android:maxHeight="48dp"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/overflow_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_action_circle_overflow_dark"
                android:contentDescription="Open Web Page"
                android:minHeight="48dp" android:minWidth="48dp"
                android:scaleType="center" android:adjustViewBounds="true"
                android:maxWidth="48dp" android:maxHeight="48dp"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
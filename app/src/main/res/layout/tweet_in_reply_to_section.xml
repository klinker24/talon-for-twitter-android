<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.klinker.android.twitter_l.views.widgets.FontPrefTextView
        android:id="@+id/muffled_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="?textColor"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:singleLine="true"
        android:visibility="gone"
        android:background="?android:attr/selectableItemBackground" />

    <LinearLayout
        android:id="@+id/background"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:paddingTop="10dp"
        android:background="?android:attr/selectableItemBackground">

        <!-- The tweeters picture -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_pic"
                android:layout_width="@dimen/pro_pic_size"
                android:layout_height="@dimen/pro_pic_size"
                android:minHeight="@dimen/pro_pic_size" android:minWidth="@dimen/pro_pic_size"
                android:maxWidth="@dimen/pro_pic_size" android:maxHeight="@dimen/pro_pic_size"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="6dp"
                android:paddingTop="3dp"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"/>

            <View
                android:id="@+id/tweet_link"
                android:layout_width="3dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="2dp"
                android:background="?drawerDividerColor"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/pro_pic_size"
            android:gravity="center_vertical"
            android:layoutDirection="ltr"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.klinker.android.twitter_l.views.widgets.FontPrefTextView
                    android:id="@+id/name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="?textColor"
                    android:singleLine="true"/>

                <com.klinker.android.twitter_l.views.widgets.FontPrefTextView
                    android:id="@+id/screenname"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:textColor="?dateColor"
                    android:singleLine="true"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:id="@+id/quick_actions"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="?android:selectableItemBackground"
                    android:paddingRight="6dp"
                    android:paddingLeft="6dp"
                    android:gravity="right|center_vertical">

                    <com.klinker.android.twitter_l.views.widgets.FontPrefTextView
                        android:id="@+id/time"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="?dateColor" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">

                    <com.klinker.android.twitter_l.views.widgets.FontPrefTextView
                        android:id="@+id/tweet"
                        android:tag="tweet"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textColor="?textColor"
                        android:layoutDirection="locale" />

                    <com.klinker.android.twitter_l.views.widgets.FontPrefTextView
                        android:id="@+id/retweeter"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:paddingTop="3dp"
                        android:gravity="left"
                        android:textColor="?dateColor"
                        android:visibility="gone" />

                </LinearLayout>

                <FrameLayout android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/picture_holder"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:background="@drawable/rounded_rect"
                        android:transitionName="image"
                        android:id="@+id/image"/>

                    <ImageView
                        android:id="@+id/play_button"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="12dp"
                        android:layout_gravity="bottom|start"/>

                    <com.klinker.android.simple_videoview.SimpleVideoView
                        android:id="@+id/video_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:background="@android:color/black"
                        app:loop="true"
                        app:stopSystemAudio="false"
                        app:muted="true" />

                </FrameLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/embedded_tweet_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/quoted_tweet_height"
                android:maxWidth="300dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:elevation="2dp"
                card_view:cardCornerRadius="3dp"
                card_view:cardBackgroundColor="?embeddedTweetBackground"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="top"
        android:id="@+id/expansion"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-4dp"
        android:gravity="top"
        android:id="@+id/replies"
        android:visibility="gone">

        <View
            android:id="@+id/line"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="18dp"
            android:alpha=".6"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/inner_expansion"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
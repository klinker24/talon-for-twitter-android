<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="?colorPrimary" >

        <ImageView
            android:id="@+id/banner"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:gravity="end"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="12dp"
            android:background="@drawable/gradient">

            <TextView
                android:id="@+id/real_name"
                android:visibility="gone"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/screen_name"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_pic"
            android:layout_gravity="end"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:minHeight="64dp" android:minWidth="64dp"
            android:maxWidth="64dp" android:maxHeight="64dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFFFF"/>

        <ImageView
            android:id="@+id/verified"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_action_accept_dark" />

    </FrameLayout>

    <FrameLayout
        android:background="?colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/location"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="14dp"
                android:ellipsize="end"
                android:alpha=".91"/>

            <TextView
                android:id="@+id/description"
                android:layout_marginTop="4dp"
                android:maxLines="3"
                android:textSize="14dp"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:background="?colorPrimaryDark"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/followers_count"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha=".85"/>

                    <TextView
                        android:id="@+id/followers_label"
                        android:textSize="12sp"
                        android:text="@string/followers"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:alpha=".65" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/following_count"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha=".85" />

                    <TextView
                        android:id="@+id/following_label"
                        android:textSize="12sp"
                        android:text="@string/following"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:alpha=".65"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tweet_count"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha=".85" />

                    <TextView
                        android:id="@+id/tweets_label"
                        android:textSize="12sp"
                        android:text="@string/tweets"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:alpha=".65" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/following_status"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>